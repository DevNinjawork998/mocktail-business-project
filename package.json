{
  "name": "mocktail-buisness",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "npx prisma generate && next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "tsx prisma/seed.prod.ts",
    "db:seed-admin": "tsx prisma/seed-admin.ts",
    "db:create-settings-table": "tsx scripts/create-settings-table.ts",
    "db:backup:prod": "tsx scripts/backup-prod-db.ts",
    "db:dev": "cp prisma/schema.dev.prisma prisma/schema.prisma && npx prisma generate && npx prisma db push --schema prisma/schema.prisma --config prisma/prisma.config.ts",
    "db:prod": "cp prisma/schema.prod.prisma prisma/schema.prisma && npx prisma generate --config prisma/prisma.config.ts",
    "build:prod": "npm run db:prod && npx prisma generate && next build --webpack"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@eslint/eslintrc": "^3",
    "@hookform/resolvers": "^5.1.1",
    "@prisma/adapter-libsql": "^7.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@stripe/stripe-js": "^7.4.0",
    "@types/pg": "^8.16.0",
    "@uploadthing/react": "^7.3.3",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.7",
    "lightningcss": "^1.30.1",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "pg": "^8.16.3",
    "react": "^19.0.1",
    "react-dom": "^19.0.1",
    "react-hook-form": "^7.58.1",
    "stripe": "^18.2.1",
    "styled-components": "^6.1.19",
    "tailwindcss": "^3.4.17",
    "uploadthing": "^7.7.4",
    "vercel": "^50.1.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/styled-components": "^5.1.34",
    "dotenv": "^17.2.3",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "3.7.4",
    "prisma": "^7.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "overrides": {
    "esbuild": "^0.25.9",
    "path-to-regexp": "^6.2.3",
    "undici": "^6.21.1",
    "lightningcss": "^1.30.1",
    "hono": "^4.11.4",
    "tar": "^7.5.4",
    "lodash": "^4.17.23",
    "glob": "^10.5.0"
  }
}
